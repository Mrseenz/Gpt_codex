{
  "name": "gpt-codex-desktop",
  "version": "1.0.0",
  "description": "Desktop GPT Codex for Windows with cloud and local LLM support",
  "main": "src/main.js",
  "author": "GPT-5.2-Codex",
  "license": "MIT",
  "scripts": {
    "dev": "electron .",
    "start": "electron .",
    "lint": "node --check src/main.js && node --check src/preload.js && node --check src/renderer/renderer.js",
    "dist:win": "electron-builder --win nsis",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.gptcodex.desktop",
    "productName": "GPT Codex Desktop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json",
      "README.md"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "artifactName": "GPT-Codex-Desktop-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3"
  }
}
